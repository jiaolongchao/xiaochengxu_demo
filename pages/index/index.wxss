/**index.wxss**/
.selection{
  border-bottom:solid 5px #ddd;
}
.header{
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: green;
  display: flex;
  justify-content: space-between;  
  align-items: center;
  height: 60rpx;  
  padding: 0 10rpx 10rpx 10rpx;
  margin-top: 10rpx;
}
.text-all{
  color: green;
  font-size: 14px;
}
.content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}
.content-item{
  height: 250rpx;
  width: 45%;
  background: goldenrod;
  margin:5px;  
  position: relative;
}
.content-item image{
  width: 100%;
  height: 100%;
}
.content-item-text{
  position: absolute;
  bottom:0px;
  color: #fff;
  font-size: 10px;
  background:-webkit-linear-gradient(bottom,rgba(0,0,0,0.8),rgba(0,0,0,0));
  height: 125rpx;
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding:2%;
}
.list-item{
  height: 500rpx;
}
.list-item-image{
  height: 300rpx;
  width: 100%;
  position: relative;
}
.list-item-image-img{ 
  width: 100%;
  height: 100%;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  bottom:-50rpx;
  right: 50rpx;
}
.list-item-text{
  height: 200rpx;
  width: 96%;  
  margin-top: 20rpx;
  padding: 0 2% 10rpx 2%;
}
.list-item-text-title{
  font-size: 15px;
}
.list-item-text-content{
  font-size: 10px;
  color: #999;
  margin-top: 20rpx;
}

