
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.userimg{
  width: 100px;
  height: 100px;
  border-radius: 50%;
}
.rotate{
  transform: -webkit-rotate(360deg);
  transition: rotate 1s ;
}